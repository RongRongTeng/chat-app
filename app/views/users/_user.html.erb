<% if @current_room && @current_room.is_a?(User) && @current_room.id == user.id %>
  <% is_active = 'active' %>
<% else %>
  <% is_active = '' %>
<% end %>

<%= link_to user, class: "list-group-item list-group-item-action room_list_item #{is_active} border-0" do %>
  <div class="d-flex align-items-start">
    <%= user.email %>
  </div>
<% end %>
